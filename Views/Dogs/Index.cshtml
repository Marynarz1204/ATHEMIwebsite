@{
    ViewData["Title"] = "Psy";
}
<h1>@ViewData["Title"]</h1>

@model List<Dog>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Opis</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dog in Model)
            {
                <tr>
                    <td>@dog.Name</td>
                    <td>@dog.Description</td>
                    <td><a class="btn btn-link" asp-controller="Dogs" asp-action="Edit" asp-route-id="@dog.DogId">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
